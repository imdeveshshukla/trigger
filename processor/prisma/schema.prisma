generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String
  password String
  Triggers Trigger[]
}

model Trigger {
  id        String           @id @default(uuid())
  zapId     String           @unique
  triggerId String
  userId    Int
  actions   Action[]
  zapRuns   Running[]
  type      AvailableTrigger @relation(fields: [triggerId], references: [id])
  user      User             @relation(fields: [userId], references: [id])
}

model Action {
  id           String          @id @default(uuid())
  zapId        String
  actionId     String
  sortingOrder Int             @default(0)
  type         AvailableAction @relation(fields: [actionId], references: [id])
  zap          Trigger         @relation(fields: [zapId], references: [id])
}

model AvailableAction {
  id      String   @id @default(uuid())
  name    String
  actions Action[]
}

model AvailableTrigger {
  id       String    @id @default(uuid())
  name     String
  triggers Trigger[]
}

model Running {
  id           String         @id @default(uuid())
  zapId        String
  metadata     Json
  zap          Trigger        @relation(fields: [zapId], references: [id])
  zapRunOutbox RunningOutbox?
}

model RunningOutbox {
  id       String  @id @default(uuid())
  zapRunId String  @unique
  zapRun   Running @relation(fields: [zapRunId], references: [id])
}
